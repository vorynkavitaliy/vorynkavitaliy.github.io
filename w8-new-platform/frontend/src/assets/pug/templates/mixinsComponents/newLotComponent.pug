
mixin newLots(data)
    .new-lots-wrapper.morph-bg.radius-3
        .new-lots-item.morph-bg.radius-2.pb-2
            header.new-auto-item-caruosel.pb-2.radius-2
                .carousel
                    ul.carousel-list.flex-container
                        each car in data.cars 
                            li.carousel-slide
                                img(src=`${car}.jpg`, alt=data.name)

            main.new-lots-item-main
                .new-lots-item-title.ph-2.mb-2
                    h4.text.bold-value.capitalize.center.mb-1=data.name
                    span.text.text-s.regular-value.grey-2.center.block
                        ='Артикул: '
                        =` ${data.articul}`

                    h3.price.text.text-l.bold.center.ph-1.mv-2
                        span.text.text-s.regular-value.grey-4.center.block Поточна ставка 
                        =data.price
                    
                    span.text.text-s.regular-value.grey-4.center.block
                        ='До початку торгів: '
                        span.text.text-s.bold-value.main.center.block.mt-1=` ${data.timer}`
                
                .ph-2.mt-2.mb-4
                    a.btn.btn-light.radius-2(href=data.url) Хочу такий автомобіль
                
                    .actions.grid-container.cols-2.mv-2.offset-2
                        +BtnIcon('button', 'eye', 'Cлідкувати')
                        +BtnIcon('button', 'libra', 'Порівняти')
            
            footer.new-lots-item-footer.ph-2
                each description in data.descriptionArray
                    p.text.text-m.grey-2.medium.mb-2
                        =`${description.type}: `
                        strong.text.text-m.bold.main=description.info